<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorHint">@color/colorHint</item>
        <item name="colorControlNormal">@color/colorHeight</item>
        <item name="colorControlActivated">@color/colorHeight</item>
        <item name="colorControlHighlight">@color/colorHeight</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="LoginEditText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#d1caca</item>
        <item name="android:textColorHint">#d1caca</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditTextNumberError">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">16dp</item>
    </style>

</resources>
