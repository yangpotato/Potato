<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F5F9"
    android:fitsSystemWindows="true">
    <include layout="@layout/toolbar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorView"
        android:layout_marginStart="10dp"
        />
    <RelativeLayout
        android:id="@+id/lin_setting_info"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/selector_click"
        android:layout_marginTop="5dp">
        <TextView
            style="@style/SettingTextStyle"
            android:text="个人资料" />
        <ImageView
            style="@style/SettingImageStyle"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorView"
        android:layout_marginStart="10dp"
        />
    <RelativeLayout
        android:id="@+id/lin_setting_safe"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/selector_click">
        <TextView
            style="@style/SettingTextStyle"
            android:text="修改密码" />
        <ImageView
            style="@style/SettingImageStyle"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorView"
        android:layout_marginStart="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorView"
        android:layout_marginStart="10dp"
        />
    <RelativeLayout
        android:id="@+id/lin_setting_zan"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/selector_click">
        <TextView
            style="@style/SettingTextStyle"
            android:text="我赞过的" />
        <ImageView
            style="@style/SettingImageStyle"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorView"
        android:layout_marginStart="10dp"
        />
    <RelativeLayout
        android:id="@+id/lin_setting_change"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/selector_click">
        <TextView
            style="@style/SettingTextStyle"
            android:text="修改感兴趣标签" />
        <ImageView
            style="@style/SettingImageStyle"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F0F5F9"
        />
    <RelativeLayout
        android:id="@+id/lin_setting_aboutme"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/selector_click">
        <TextView
            style="@style/SettingTextStyle"
            android:text="关于我们" />
        <ImageView
            style="@style/SettingImageStyle"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#F0F5F9" />
    <RelativeLayout
        android:id="@+id/lin_setting_exit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/selector_click">
        <TextView
            style="@style/SettingTextStyle"
            android:text="退出账号"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
