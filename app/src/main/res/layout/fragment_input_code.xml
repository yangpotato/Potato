<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainColor"
    tools:context="com.a7feeling.zhongcaoji.login.InputPhoneFragment">
    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="输入验证码"
        android:textSize="25dp"
        android:textColor="@color/color333"
        android:gravity="center"
        android:layout_marginTop="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/color999"
        android:text="已发送6位数验证码至"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/tv_login_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/color333"
        android:text="+86 123 4567 8900"
        android:layout_gravity="center" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp">
       <EditText
           android:id="@+id/edtCode"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:background="@null"
           android:gravity="center"
           android:inputType="number"
           android:hint="请输入验证码"
           android:textColor="@color/color333"
           android:textCursorDrawable="@null"
           android:textSize="24dp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorView"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"/>
    <Button
        android:id="@+id/btn_login_sure"
        android:layout_width="245dp"
        android:layout_height="42dp"
        android:text="确定"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:background="@drawable/selector_login"/>
    <TextView
        android:id="@+id/tv_login_bottom"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:text="重新发送(30s)"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

</LinearLayout>
