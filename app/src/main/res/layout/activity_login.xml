<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yang.potato.potato.activitys.LoginActivity">

    <com.yang.potato.potato.custView.LoginVideoView
        android:id="@+id/video_login_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:paddingTop="20dp"
        android:layout_margin="30dp">
    <RelativeLayout
        android:id="@+id/layout_login_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_login_cancel_1"
            android:layout_centerVertical="true"
            app:counterEnabled="true"
            app:counterMaxLength="11"
            app:counterOverflowTextAppearance="@style/EditTextNumberError"
            android:hint="@string/phone">
        <EditText
            android:id="@+id/edt_login_phone"
            style="@style/LoginEditText"
            android:inputType="phone"/>
        </android.support.design.widget.TextInputLayout>
        <ImageView
            android:id="@+id/img_login_cancel_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/cancel"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:visibility="invisible"
            android:layout_marginRight="-10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d1caca"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_login_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/layout_login_1"
            android:layout_marginTop="5dp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/img_login_cancel_2"
                android:layout_centerVertical="true"
                android:hint="@string/pw">
            <EditText
                android:id="@+id/edt_login_pw"
                style="@style/LoginEditText"
                android:inputType="textPassword" />
            </android.support.design.widget.TextInputLayout>
            <ImageView
                android:id="@+id/img_login_cancel_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/cancel"
                android:layout_toLeftOf="@+id/img_login_visible"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:visibility="invisible"
                android:layout_marginRight="-15dp"/>
            <ImageView
                android:id="@+id/img_login_visible"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/sel_pw_visible"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d1caca"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <com.yang.potato.potato.custView.LoginAnimationView
            android:id="@+id/loginBtn_login"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/layout_login_2"
            android:layout_marginTop="30dp"/>
    </RelativeLayout>
</RelativeLayout>