<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/linAll">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:id="@+id/lin_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="245dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/test" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <ImageView
                        android:id="@+id/img_userinfo_setting"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/nav_set"
                        android:layout_marginStart="10dp"/>

                    <ImageView
                        android:id="@+id/img_userinfo_share"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/nav_share_1"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/linn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    <RelativeLayout
                        android:layout_width="85dp"
                        android:layout_height="85dp">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/img_userinfo_icon"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:src="@mipmap/test"
                            app:riv_oval="true"
                            android:scaleType="centerCrop"
                            app:riv_border_width="2dp"
                            app:riv_border_color="#ffffff"/>

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_userinfo_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="18dp"
                        android:text="昵称"
                        android:gravity="center"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_below="@+id/linn"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/tv_userinfo_follow_number"
                            style="@style/UserTextStyle"
                            android:text="0" />
                        <TextView
                            style="@style/UserTextStyle"
                            android:text="关注" />
                    </LinearLayout>
                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"></View>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_userinfo_fans_number"
                            style="@style/UserTextStyle"
                            android:text="0" />
                        <TextView
                            style="@style/UserTextStyle"
                            android:text="粉丝" />
                    </LinearLayout>
                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"></View>

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_userinfo_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333"
                    android:text="编辑个人资料"
                    android:textSize="16dp"
                    android:background="@drawable/shape_tv_black"
                    android:gravity="center" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E2E2E2"
                android:layout_marginTop="11dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/tv_userinfo_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加个人描述，可让大家更好的认识你"
                android:textColor="#666666"
                android:textSize="13dp"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E2E2E2"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_userinfo"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="100dp"
            app:tabBackground="@null" />

        <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/recycle_userinfo"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_mine"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
