<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/mainColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_item_follow_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/test"
            app:riv_oval="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/tv_item_follow_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="16dp"
            android:textColor="#333333"
            android:layout_toRightOf="@id/img_item_follow_icon"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tv_item_follow_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00-00"
            android:textSize="13dp"
            android:textColor="#999999"
            android:layout_toRightOf="@id/img_item_follow_icon"
            android:layout_below="@id/tv_item_follow_name"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_item_follow_img"
        android:layout_width="385dp"
        android:layout_height="385dp"
        android:layout_gravity="center"
        android:src="@mipmap/test"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <LinearLayout
            android:id="@+id/lin_item_follow_3img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/img_item_follow_img1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@mipmap/test"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/img_item_follow_img2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@mipmap/test"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/img_item_follow_img3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@mipmap/test"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_item_follow_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0图"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/shape_img_number"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_item_follow_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="17dp"
        android:text="标题"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tv_item_follow_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="15dp"
        android:text="内容"
        android:layout_marginStart="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E2E2E2"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
</LinearLayout>