<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yang.potato.potato.activitys.AlbumInfoActivity">
<android.support.v7.widget.RecyclerView
    android:id="@+id/recycle_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#333333">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
        <TextView
            android:id="@+id/tv_zan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="赞·0"
            android:textColor="#ffffff"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/selector_zan"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="评论·0"
                android:textColor="#ffffff"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/tab_comment"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="收藏·0"
                android:textColor="#ffffff"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/selector_collection"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
