<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorB">
    <include layout="@layout/toolbar"/>
    <EditText
        android:id="@+id/edt_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/mainColor"
        android:layout_marginTop="5dp"
        android:hint="请输入你的标题"
        android:textCursorDrawable="@null"
        android:textColorHint="@color/color999"
        android:paddingStart="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="5dp"
        android:background="@color/mainColor">

        <EditText
            android:id="@+id/edt_video_info"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:hint="这一刻，想说些什么？"
            android:textColorHint="@color/color999"
            android:layout_marginStart="10dp"
            android:gravity="top"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_tv_black"
        android:layout_gravity="center"
        android:text="创建相册"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/mainColor"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/shape_send_code"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="#  标签"
            android:gravity="center"
            android:textColor="@color/color666"/>
        <TextView
            android:id="@+id/tv_tag1"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:background="@drawable/shape_send_code"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="#  标签"
            android:gravity="center"
            android:textColor="@color/color666"/>
        <TextView
            android:id="@+id/tv_tag2"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:background="@drawable/shape_send_code"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="#  标签"
            android:gravity="center"
            android:textColor="@color/color666"/>
        <TextView
            android:id="@+id/tv_tag3"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:background="@drawable/shape_send_code"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="#  标签"
            android:gravity="center"
            android:textColor="@color/color666"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainColor"
        android:layout_marginTop="10dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleUpload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>
