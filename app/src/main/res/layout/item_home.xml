<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:background="#ffffff"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:id="@+id/img_item_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scaleType="fitXY" />
        <ImageView
            android:id="@+id/img_item_seletct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:visibility="gone"
            android:src="@mipmap/main_selece_1"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_item_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="世界那么大，我想去看看"
        android:textColor="#333333"
        android:maxLines="2"
        android:layout_margin="10dp"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="14dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_item_home_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:riv_oval="true"
        android:src="@mipmap/test"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_item_home_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_item_home_icon"
        android:textSize="12dp"
        android:text="昵称"
        android:textColor="#333333"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/img_item_home_praise"
        android:layout_width="16dp"
        android:layout_height="15dp"
        android:background="@mipmap/main_zan_1"
        android:layout_toLeftOf="@+id/tv_praise"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"/>
    
    <TextView
        android:id="@+id/tv_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#333333"
        android:layout_alignParentRight="true"
        android:text="100"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"/>
</RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>